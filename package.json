{
  "name": "aws-crud-api",
  "version": "0.1.0",
  "description": "Serverless CRUD API with Lambda, API Gateway, DynamoDB, and Cognito",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.integration.config.js --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.995.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30",
    "@types/node": "^24.10.1",
    "dotenv": "^17.3.1",
    "jest": "^30",
    "ts-jest": "^29",
    "typescript": "~5.9.3"
  }
}
